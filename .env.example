# =============================================================================
# Robot Voice Pipeline - Example Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual configuration values
# IMPORTANT: Never commit your .env file to version control
# =============================================================================

# =============================================================================
# API Keys (REQUIRED)
# =============================================================================
# OpenRouter API key for LLM access - Get from https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here

# =============================================================================
# Model Configuration
# =============================================================================
# ASR Models
WAV2VEC2_MODEL=facebook/wav2vec2-base-960h
VOSK_LANGUAGE=en-us

# TTS Model
SPEECHT5_MODEL=microsoft/speecht5_tts
SPEECHT5_VOCODER=microsoft/speecht5_hifigan

# LLM Model
LLM_MODEL=mistralai/mistral-7b-instruct:free

# =============================================================================
# Audio Configuration
# =============================================================================
# Audio sample rate for processing
SAMPLE_RATE=16000

# TTS speed (1.0 = normal, <1.0 = slower, >1.0 = faster)
TTS_SPEED=1.0

# =============================================================================
# ROS2 Configuration
# =============================================================================
# ROS2 domain ID (0-101)
ROS_DOMAIN_ID=0

# Robot topic for movement commands
ROBOT_TOPIC=/turtle1/cmd_vel

# =============================================================================
# Output Configuration
# =============================================================================
# Directory for output audio files
OUTPUT_DIR=./

# Default output filename for TTS
TTS_OUTPUT_FILE=output.wav

# Default output filename for robot response
ROBOT_RESPONSE_FILE=robot_response.wav